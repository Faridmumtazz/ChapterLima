<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".pertemuanViewModel.TombolViewModelActivity">

    <Button
        android:id="@+id/btn_novm"
        android:text="Tanpa View Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_vm"
        android:text="Dengan View Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_livedata"
        android:text="Dengan Live Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>